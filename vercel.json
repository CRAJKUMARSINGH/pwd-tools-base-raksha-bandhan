{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "public": true,
  "builds": [
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/tools/(.*)", "dest": "/public/tools/$1" },
    { "src": "/assets/(.*)", "dest": "/src/assets/$1" }
  ]
}


